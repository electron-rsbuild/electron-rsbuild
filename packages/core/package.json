{
  "name": "@electron-rsbuild/core",
  "version": "0.0.5",
  "description": "Next generation Electron build tooling based on Rsbuild.",
  "author": "veaba<godpu@oulook.com>",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "electron-rsbuild": "bin/electron-rsbuild.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rslib build --watch",
    "start": "rslib build --watch",
    "build": "rslib build",
    "clear": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/veaba/electron-rsbuild.git"
  },
  "keywords": [
    "electron-builder",
    "electron-rsbuild"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/veaba/electron-rsbuild/issues"
  },
  "homepage": "https://github.com/veaba/electron-rsbuild#readme",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@rslib/core": "^0.0.16",
    "cac": "^6.7.14",
    "picocolors": "^1.1.1",
    "prebundle": "1.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@rsbuild/core": "^1.1.0",
    "magic-string": "^0.30.12",
    "rslog": "^1.2.3",
    "@electron-rsbuild/plugin-main": "workspace:*",
    "@electron-rsbuild/plugin-preload": "workspace:*",
    "@electron-rsbuild/plugin-renderer": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}